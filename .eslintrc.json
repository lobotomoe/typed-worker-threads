{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": [
        "xo-typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "capitalized-comments": "off",
    "@typescript-eslint/ban-types": "off",
    "@typescript-eslint/naming-convention": "off"
  }
}